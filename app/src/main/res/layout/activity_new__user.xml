<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.team4.social_geocaching_app.New_User"
    android:background="@color/greenTheme"
    android:orientation="vertical"
              android:gravity="center_vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="New User"
        android:id="@+id/textView"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:layout_marginTop="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password must be at least 6 characters and contain at least one uppercase character, at least one uppercase letter, and at least one number."
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:typeface="serif" />

    <EditText
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:id="@+id/username"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0"
        android:paddingRight="10dp"
        android:background="@color/white"
        android:phoneNumber="false"
        android:password="false"
        android:height="50dp"
        android:paddingLeft="10dp"
        android:hint="username"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp" />

    <EditText
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:id="@+id/password"
        android:background="@color/white"
        android:phoneNumber="false"
        android:password="false"
        android:height="50dp"
        android:width="340dp"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0"
        android:hint="password"
        android:layout_below="@+id/username"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submit"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout></ScrollView>
