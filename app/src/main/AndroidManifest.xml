<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.team4.social_geocaching_app" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!--
     The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
     Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_title"
        android:theme="@style/GreenActionBarTheme" >
        <activity
            android:name=".Login"
            android:label="@string/app_title"
            android:theme="@style/NoBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeScreen"
            android:label="@string/app_title"
            android:theme="@style/GreenActionBarTheme" >
        </activity>
        <activity
            android:name=".New_User"
            android:label="@string/app_title"
            android:theme="@style/NoBar" >
        </activity>
        <activity
            android:name=".AboutGeocache"
            android:label="@string/title_about_geocache"
            android:theme="@style/GreenActionBarTheme" >
        </activity>
        <activity
            android:name=".Connect"
            android:label="@string/title_connect"
            android:theme="@style/GreenActionBarTheme" >
        </activity>
        <activity
            android:name=".CreateGeocache"
            android:label="@string/title_create_geocache"
            android:theme="@style/GreenActionBarTheme" >
        </activity>
        <activity
            android:name=".FoundGeocache"
            android:label="@string/title_found_geocache"
            android:theme="@style/GreenActionBarTheme" >
        </activity>
        <activity
            android:name=".Leaderboards"
            android:label="@string/title_leaderboards"
            android:theme="@style/GreenActionBarTheme" >
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".Map"
            android:label="@string/title_map"
            android:theme="@style/GreenActionBarTheme" >
        </activity>
        <activity
            android:name=".MyAccount"
            android:label="@string/title_my_account"
            android:theme="@style/GreenActionBarTheme" >
        </activity>
        <activity
            android:name=".NearMe"
            android:label="@string/title_near_me"
            android:theme="@style/GreenActionBarTheme" >
        </activity>
        <!-- Google Maps API Key = AIzaSyDVshHA3Rh13Zzyajlm-QLrpHaOsFdK0r4 -->
        <activity
            android:name=".GeocacheVisit"
            android:label="@string/title_activity_geocache_visit" >
        </activity>
    </application>

</manifest>
