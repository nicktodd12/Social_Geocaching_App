<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.team4.social_geocaching_app" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!--
     The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
     Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_title"
        android:theme="@style/GreenActionBarTheme" >
        <activity
            android:theme="@style/NoBar"
            android:name=".Login"
            android:label="@string/app_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:theme="@style/GreenActionBarTheme"
            android:name=".HomeScreen"
            android:label="@string/app_title">
        </activity>

        <activity
            android:name=".New_User"
            android:theme="@style/NoBar"
            android:label="@string/app_title" >
        </activity>
        <activity
            android:name=".AboutGeocache"
            android:theme="@style/GreenActionBarTheme"
            android:label="@string/title_about_geocache" >
        </activity>
        <activity
            android:name=".Connect"
            android:theme="@style/GreenActionBarTheme"
            android:label="@string/title_connect" >
        </activity>
        <activity
            android:name=".CreateGeocache"
            android:theme="@style/GreenActionBarTheme"
            android:label="@string/title_create_geocache" >
        </activity>
        <activity
            android:name=".FoundGeocache"
            android:theme="@style/GreenActionBarTheme"
            android:label="@string/title_found_geocache" >
        </activity>
        <activity
            android:name=".Leaderboards"
            android:theme="@style/GreenActionBarTheme"
            android:label="@string/title_leaderboards" >
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />
        <activity
            android:name=".Map"
            android:theme="@style/GreenActionBarTheme"
            android:label="@string/title_map" >
        </activity>
        <activity
            android:name=".MyAccount"
            android:theme="@style/GreenActionBarTheme"
            android:label="@string/title_my_account" >
        </activity>
        <activity
            android:name=".NearMe"
            android:theme="@style/GreenActionBarTheme"
            android:label="@string/title_near_me" >
        </activity>
        <!--Google Maps API Key = AIzaSyDVshHA3Rh13Zzyajlm-QLrpHaOsFdK0r4-->
    </application>

</manifest>
